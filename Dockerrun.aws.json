{
  "AWSEBDockerrunVersion":2,
  "containerDefinitions":[
    {
      "name":"api",
      "image":"api:latest",
      "essential":true,
      "memory":1024,
      "portMappings":[
        {
          "hostPort":8080,
          "containerPort":8080
        }
      ]
    },
    {
      "name":"nginx",
      "image":"nginx:latest",
      "essential":true,
      "memory": 128,
      "portMappings":[
        {
          "hostPort":80,
          "containerPort":80
        }
      ],
      "mountPoints":[
        {
          "containerPath":"/etc/nginx/conf.d",
          "sourceVolume":"nginx-data"
        }
      ],
      "links":[
        "api"
      ]
    }
  ],
  "family": "",
  "volumes":[
    {
      "name": "nginx-data",
      "host": {
        "sourcePath": "/var/app/current/nginx/conf.d"
      }
    }
  ]
}